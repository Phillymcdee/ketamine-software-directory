---
/**
 * ReviewBadge - Shows a single review source badge (G2 or Capterra)
 *
 * Usage:
 *   <ReviewBadge source="g2" score={4.5} count={123} url="https://..." />
 */

interface Props {
  source: 'g2' | 'capterra';
  score: number;
  count: number;
  url: string;
}

const { source, score, count, url } = Astro.props;

const sourceConfig = {
  g2: {
    name: 'G2',
    logo: '/images/g2-logo.svg',
    bgColor: 'bg-orange-50',
    textColor: 'text-orange-700',
    borderColor: 'border-orange-200',
  },
  capterra: {
    name: 'Capterra',
    logo: '/images/capterra-logo.svg',
    bgColor: 'bg-blue-50',
    textColor: 'text-blue-700',
    borderColor: 'border-blue-200',
  },
};

const config = sourceConfig[source];
const displayScore = score.toFixed(1);
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'inline-flex items-center gap-2 rounded-lg border px-3 py-2 text-sm transition-all hover:shadow-sm',
    config.bgColor,
    config.borderColor,
  ]}
  title={`View ${count} reviews on ${config.name}`}
>
  <span class:list={['font-semibold', config.textColor]}>
    {config.name}
  </span>
  <span class="flex items-center gap-1">
    <svg class="h-4 w-4 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
    </svg>
    <span class="font-medium text-slate-900">{displayScore}</span>
  </span>
  <span class="text-slate-500">({count})</span>
</a>
