---
interface Props {
  name: string;
  slug: string;
  description: string;
  logo: string;
  startingPrice: number | null;
  currency: string;
  pricingModel: string;
  hasFreeTrisl: boolean;
  ketamineFeatureCount: number;
  isKetamineSpecific: boolean;
}

const {
  name,
  slug,
  description,
  logo,
  startingPrice,
  currency,
  pricingModel,
  hasFreeTrisl,
  ketamineFeatureCount,
  isKetamineSpecific,
} = Astro.props;

const priceDisplay = startingPrice === null
  ? 'Contact for pricing'
  : `From ${currency === 'CAD' ? 'CA' : ''}$${startingPrice}/mo`;

const pricingModelDisplay = pricingModel === 'per_clinician'
  ? 'per clinician'
  : pricingModel === 'flat'
    ? 'flat rate'
    : '';
---

<article class="group relative flex flex-col overflow-hidden rounded-xl border border-gray-200 bg-white transition-all hover:border-emerald-300 hover:shadow-lg">
  {isKetamineSpecific && (
    <div class="absolute right-3 top-3 z-10">
      <span class="rounded-full bg-emerald-100 px-2.5 py-1 text-xs font-medium text-emerald-700">
        Ketamine-Specific
      </span>
    </div>
  )}

  <div class="flex flex-1 flex-col p-6">
    <!-- Logo & Name -->
    <div class="flex items-start gap-4">
      <div class="flex h-14 w-14 shrink-0 items-center justify-center rounded-lg bg-gray-100">
        <img
          src={logo}
          alt={`${name} logo`}
          class="h-10 w-10 object-contain"
          loading="lazy"
          onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
        />
        <span class="hidden h-10 w-10 items-center justify-center text-lg font-bold text-gray-400">
          {name.charAt(0)}
        </span>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-900 group-hover:text-emerald-600">
          {name}
        </h3>
        <p class="mt-0.5 text-sm text-gray-500">
          {priceDisplay}
          {pricingModelDisplay && <span class="text-gray-400"> Â· {pricingModelDisplay}</span>}
        </p>
      </div>
    </div>

    <!-- Description -->
    <p class="mt-4 flex-1 text-sm text-gray-600 line-clamp-3">
      {description}
    </p>

    <!-- Features Tags -->
    <div class="mt-4 flex flex-wrap gap-2">
      {hasFreeTrisl && (
        <span class="rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700">
          Free Trial
        </span>
      )}
      {ketamineFeatureCount > 0 && (
        <span class="rounded-md bg-purple-50 px-2 py-1 text-xs font-medium text-purple-700">
          {ketamineFeatureCount} Ketamine Features
        </span>
      )}
    </div>

    <!-- CTA -->
    <div class="mt-6">
      <a
        href={`/software/${slug}/`}
        class="inline-flex w-full items-center justify-center rounded-lg bg-gray-900 px-4 py-2.5 text-sm font-medium text-white transition-colors hover:bg-emerald-600"
      >
        View Details
        <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</article>
