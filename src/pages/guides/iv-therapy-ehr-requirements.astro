import { getCollection } from 'astro:content';

const allSoftware = await getCollection('software');
const ivCapable = allSoftware.filter(
  (s) => s.data.ketamine_features.iv_protocols ||
    s.data.description.toLowerCase().includes('iv') ||
    s.data.description.toLowerCase().includes('infusion')
);

