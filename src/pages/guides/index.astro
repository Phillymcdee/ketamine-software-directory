---
import BaseLayout from '../../layouts/BaseLayout.astro';

const guides = [
  {
    title: 'How to Choose an EHR for Your Ketamine Clinic',
    slug: 'choosing-ketamine-ehr',
    description: 'A comprehensive guide to evaluating EHR and practice management software for ketamine and psychedelic therapy practices.',
    readTime: '12 min read',
  },
  {
    title: 'SPRAVATO Billing Guide',
    slug: 'spravato-billing-guide',
    description: 'Complete guide to SPRAVATO (esketamine) billing codes, REMS compliance, insurance authorization, and reimbursement for psychiatry practices.',
    readTime: '10 min read',
  },
  {
    title: 'Ketamine Clinic Compliance Checklist',
    slug: 'ketamine-clinic-compliance-checklist',
    description: 'Essential regulatory and compliance requirements for operating a ketamine infusion clinic. DEA, HIPAA, controlled substances, and documentation.',
    readTime: '15 min read',
  },
  {
    title: 'IV Therapy EHR Requirements',
    slug: 'iv-therapy-ehr-requirements',
    description: 'What to look for in EHR software for IV therapy and infusion clinics. Vital monitoring, protocol templates, and documentation requirements.',
    readTime: '8 min read',
  },
];
---

<BaseLayout
  title="Guides | Ketamine Clinic Software"
  description="Expert guides on choosing EHR and practice management software for ketamine and psychedelic therapy clinics."
>
  <!-- Header -->
  <section class="bg-slate-900 px-4 py-12 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
      <h1 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        Guides & Resources
      </h1>
      <p class="mt-4 text-lg text-slate-300">
        Expert guides to help you choose and implement software for your ketamine clinic.
      </p>
    </div>
  </section>

  <!-- Guides List -->
  <section class="px-4 py-12 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
      <div class="space-y-6">
        {guides.map((guide) => (
          <a
            href={`/guides/${guide.slug}/`}
            class="block rounded-xl border border-slate-200 bg-white p-6 hover:border-teal-300 hover:shadow-md"
          >
            <div class="flex items-start justify-between gap-4">
              <div>
                <h2 class="text-xl font-semibold text-slate-900">{guide.title}</h2>
                <p class="mt-2 text-slate-600">{guide.description}</p>
              </div>
              <svg class="h-6 w-6 shrink-0 text-slate-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
              </svg>
            </div>
            <p class="mt-4 text-sm text-slate-500">{guide.readTime}</p>
          </a>
        ))}
      </div>

      <!-- CTA -->
      <div class="mt-12 rounded-xl border border-teal-200 bg-teal-50 p-8 text-center">
        <h3 class="text-lg font-semibold text-slate-900">Ready to Compare Software?</h3>
        <p class="mt-2 text-slate-600">
          Use our comparison tool to evaluate EHR options side-by-side.
        </p>
        <a
          href="/compare/"
          class="mt-4 inline-flex items-center rounded-lg bg-teal-600 px-4 py-2 text-sm font-medium text-white hover:bg-teal-700"
        >
          Compare Software
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
